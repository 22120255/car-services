<div class='card-product__container d-flex flex-column'>
    <div class='card-product__header'>
        <a href='/products/{{_id}}'>
            <img src='{{images.image1}}' alt='car' />
        </a>
    </div>
    <div class='card-product__body d-flex flex-column flex-1'>
        <div class='d-flex justify-content-between align-items-center'>
            <a href='/products/{{_id}}'>
                <h2 class='card-product__brand text-uppercase'>{{brand}}
                    {{model}}</h2>
            </a>
            <h3 class='card-product__price'>${{price}}</h3>
        </div>
        <p class='card-product__desc'>
            {{description}}
        </p>
    </div>
    <div class='card-product__footer'>
        <p>
            <span class='car-spec-label'>Model: {{year}}</span>
        </p>
    </div>
</div>