{{! <div class='top-area'> }}
<div class='header-area'>
    <nav class='navbar navbar-expand-lg px-5'>
        <div class='container-fluid'>
            <a class='navbar-brand' href='#'>3N</a>
            <button
                class='navbar-toggler'
                type='button'
                data-bs-toggle='collapse'
                data-bs-target='#navbarSupportedContent'
                aria-controls='navbarSupportedContent'
                aria-expanded='false'
                aria-label='Toggle navigation'
            >
                <span class='navbar-toggler-icon'></span>
            </button>
            <div
                class='collapse navbar-collapse justify-content-end'
                id='navbarSupportedContent'
            >
                <ul class='navbar-nav mx-0 mb-2 mb-lg-0'>
                    <li class='nav-item'>
                        <a
                            class='nav-link text-white'
                            aria-current='page'
                            href='/dashboard'
                        >Home</a>
                    </li>
                    <li class='nav-item'>
                        <a
                            class='nav-link text-white'
                            href='/products'
                        >Product</a>
                    </li>
                    <li class='nav-item'>
                        <a
                            class='nav-link text-white'
                            href='/dashboard/about'
                        >About</a>
                    </li>
                    <li class='nav-item'>
                        <a
                            class='nav-link text-white'
                            href='/dashboard/contact'
                        >Contact</a>
                    </li>
                    <li class='nav-item mx-3'>
                        <a
                            class='nav-link text-white position-relative btn-cart'
                            href='/dashboard/shops'
                        >
                            <i class="fa-solid fa-cart-shopping"></i>
                            <span class="position-absolute start-100 translate-middle badge rounded-pill bg-danger btn-cart__badge">
                                99+
                                <span class="visually-hidden">unread messages</span>
                            </span>
                        </a>
                      
                    </li>
                    {{#if (hasUser user)}}
                        <li class='nav-item dropdown'>
                            <a
                                class='nav-link dropdown-toggle text-dark'
                                href='#'
                                id='navbarDropdown'
                                role='button'
                                data-bs-toggle='dropdown'
                                aria-expanded='false'
                            >
                                {{#if user.avatar}}
                                    <img
                                        src="{{user.avatar}}"
                                        alt='avatar'
                                        class='avatar'
                                        {{!-- crossOrigin="anonymous" --}}
                                    />
                                {{else}}
                                    <img
                                        src='https://th.bing.com/th/id/OIP._O59CcA7NFnWCmB-GpmZ8AHaEn?w=263&h=180&c=7&r=0&o=5&dpr=1.3&pid=1.7'
                                        alt='avatar'
                                        class='avatar'
                                    />
                                {{/if}}
                            </a>
                            <ul
                                class='dropdown-menu'
                                id="tippy-content"
                                aria-labelledby='navbarDropdown'
                            >
                                <li>
                                    <a
                                        href='/profile/{{user.email}}'
                                        class='d-flex align-items-center gap-1 text-decoration-none dropdown-item'
                                    >
                                        {{#if user.avatar}}
                                            <img
                                                src='{{user.avatar}}'
                                                alt='avatar'
                                                class='avatar'
                                            />
                                        {{else}}
                                            <img
                                                src='https://th.bing.com/th/id/OIP._O59CcA7NFnWCmB-GpmZ8AHaEn?w=263&h=180&c=7&r=0&o=5&dpr=1.3&pid=1.7'
                                                alt='avatar'
                                                class='avatar'
                                            />
                                        {{/if}}
                                        <div class='d-flex flex-column'>
                                            <span>Hello,</span>
                                            <span
                                                class='username'
                                            >{{user.fullName}}</span>
                                        </div>
                                    </a>
                                </li>
                                <li><div class='dropdown-divider'></div></li>
                                <li>
                                    <a
                                        class='dropdown-item'
                                        href='/profile/{{user.email}}'
                                    >My profile</a>
                                </li>
                                <li>
                                    <div class='dropdown-divider'></div>
                                </li>
                                <li>
                                    <a
                                        class='dropdown-item'
                                        href='/settings'
                                    >Settings</a>
                                </li>
                                <li>
                                    <a
                                        class='dropdown-item'
                                        href='/auth/logout'
                                    >Logout</a>
                                </li>
                            </ul>
                        </li>
                    {{else}}
                        <li class='nav-item'>
                            <button
                                onclick="window.location.href='/auth/register'"
                                title='Register'
                                type='button'
                                class='btn btn-outline-primary btn-register'
                            >
                                Register
                            </button>
                        </li>
                        <li class='nav-item mx-2'>
                            <button
                                onclick="window.location.href='/auth/login'"
                                title='Login'
                                type='button'
                                class='btn btn-success btn-login'
                            >
                                Login
                            </button>
                        </li>
                    {{/if}}
                </ul>
            </div>
        </div>
    </nav>
</div>
<div class='clearfix'></div>
<script>
    document.addEventListener("DOMContentLoaded",function () { const links =
    document.querySelectorAll(".navbar-nav li a"); links.forEach(link => {
    link.classList.toggle("active", link.getAttribute("href") ===
    window.location.pathname); }); });
    document.addEventListener("DOMContentLoaded", function() { const header =
    document.querySelector(".header-area"); window.addEventListener("scroll",
    function() { if (window.scrollY > 100) { header.classList.add("scrolled"); }
    else { header.classList.remove("scrolled"); } }); });
</script>