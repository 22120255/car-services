<div
  class='modal fade'
  id='product-modal'
  tabindex='-1'
  aria-labelledby='productModalLabel'
  aria-hidden='true'
  data-is-editing='false'
  data-product-id=''
>
  <div class='modal-dialog modal-lg'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h5 class='modal-title' id='productModalLabel'>Product Details</h5>
        <button type='button' class='btn-close' data-bs-dismiss='modal' aria-label='Close'></button>
      </div>
      <div class='modal-body' style='max-height: 550px; overflow-y: auto;'>
        <!-- Product content form -->
        <form id='product-form'>
          <!-- Select options -->
          <div class='mb-3'>
            <label for='product-brand' class='form-label'>Brand</label>
            <select
              id='product-brand'
              name='brand'
              class='form-select'
              style='padding: 8px; border: 1px solid #ddd; border-radius: 5px; width: 100%;'
            >
            </select>
            <div class='invalid-feedback'>Please select a Brand!</div>
          </div>
          <div class='mb-3'>
            <label for='product-year' class='form-label'>Year</label>
            <select id='product-year' name='year' class='form-select' style='padding: 8px; border: 1px solid #ddd; border-radius: 5px; width: 100%;'>
            </select>
            <div class='invalid-feedback'>Please select a Year!</div>
          </div>
          <div class='mb-3'>
            <label for='product-style' class='form-label'>Style</label>
            <select
              id='product-style'
              name='style'
              class='form-select'
              style='padding: 8px; border: 1px solid #ddd; border-radius: 5px; width: 100%;'
            >
            </select>
            <div class='invalid-feedback'>Please select a Style!</div>
          </div>

          <!-- Input fields -->
          <div class='mb-3'>
            <label for='product-model' class='form-label'>Model</label>
            <input type='text' class='form-control' id='product-model' name='model' value='' />
            <div class='invalid-feedback'>Please enter Model!</div>
          </div>
          <div class='mb-3'>
            <label for='product-status' class='form-label'>Status</label>
            <select id='product-status' name='status' style='padding: 8px; border: 1px solid #ddd; border-radius: 5px; width: 100%;'>
            </select>
          </div>
          <div class='mb-3'>
            <label for='product-importPrice' class='form-label'>Original Price</label>
            <input type='number' class='form-control' id='product-importPrice' name='importPrice' value='' />
            <div class='invalid-feedback'>Please enter Selling Price!</div>
          </div>
          <div class='mb-3'>
            <label for='product-price' class='form-label'>Selling Price</label>
            <input type='number' class='form-control' id='product-price' name='price' value='' />
            <div class='invalid-feedback'>Please enter Original Price!</div>
          </div>
          <div class='mb-3'>
            <label for='product-mileage' class='form-label'>Mileage</label>
            <input type='number' class='form-control' id='product-mileage' name='mileage' value='' />
            <div class='invalid-feedback'>Please enter Mileage!</div>
          </div>
          <div class='mb-3'>
            <label for='product-horsepower' class='form-label'>Horsepower</label>
            <input type='number' class='form-control' id='product-horsepower' name='horsepower' value='' />
            <div class='invalid-feedback'>Please enter Horsepower!</div>
          </div>
          <div class='mb-3'>
            <label for='product-transmission' class='form-label'>Transmission</label>
            <select id='product-transmission' name='transmission' style='padding: 8px; border: 1px solid #ddd; border-radius: 5px; width: 100%;'>
              <option value='manual'>Manual</option>
              <option value='automatic'>Automatic</option>
            </select>
          </div>
          <div class='mb-3'>
            <label for='product-fuelType' class='form-label'>Fuel Type</label>
            <select id='product-fuelType' name='fuelType' style='padding: 8px; border: 1px solid #ddd; border-radius: 5px; width: 100%;'>
            </select>
          </div>
          <div class='mb-3'>
            <label for='product-description' class='form-label'>Description</label>
            <textarea class='form-control' id='product-description' name='description' rows='3'></textarea>
            <div class='invalid-feedback'>Please enter Description!</div>
          </div>
          <div class='mb-3'>
            <label for='product-images' class='form-label'>Images</label>
            <div id='product-images'>
              <div class='d-flex align-items-center mb-2'>
                <input type='text' class='form-control me-2' name='images.image1' placeholder='Link image 1' value='' />
                <button type='button' class='btn btn-secondary upload-btn' data-input='images.image1'>Choose</button>
              </div>
              <div class='d-flex align-items-center mb-2'>
                <input type='text' class='form-control me-2' name='images.image2' placeholder='Link image 2' value='' />
                <button type='button' class='btn btn-secondary upload-btn' data-input='images.image2'>Choose</button>
              </div>
              <div class='d-flex align-items-center mb-2'>
                <input type='text' class='form-control me-2' name='images.image3' placeholder='Link image 3' value='' />
                <button type='button' class='btn btn-secondary upload-btn' data-input='images.image3'>Choose</button>
              </div>
              <div class='d-flex align-items-center mb-2'>
                <input type='text' class='form-control me-2' name='images.image4' placeholder='Link image 4' value='' />
                <button type='button' class='btn btn-secondary upload-btn' data-input='images.image4'>Choose</button>
              </div>
              <div class='d-flex align-items-center mb-2'>
                <input type='text' class='form-control me-2' name='images.image5' placeholder='Link image 5' value='' />
                <button type='button' class='btn btn-secondary upload-btn' data-input='images.image5'>Choose</button>
              </div>
            </div>
            <input type='file' id='image-file-input' accept='image/*' style='display: none;' />
          </div>

        </form>
      </div>
      <div class='modal-footer'>
        <button type='button' class='btn btn-secondary' data-bs-dismiss='modal'>
          Close
        </button>
        <button type='button' id='save-product-btn' class='btn btn-primary'>
          Save
        </button>
      </div>
    </div>
  </div>
</div>
<script type='module' src='\js\admin\inventory\productModal.js'></script>