<div
  class='modal fade'
  id='product-modal'
  tabindex='-1'
  aria-labelledby='productModalLabel'
  aria-hidden='true'
  data-is-editing='false'
  data-product-id=''
>
  <div class='modal-dialog modal-lg'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h5 class='modal-title' id='productModalLabel' value=''>Chi tiết sản phẩm</h5>
        <button type='button' class='btn-close' data-bs-dismiss='modal' aria-label='Close'></button>
      </div>
      <div class='modal-body' style='max-height: 550px; overflow-y: auto;'>
        <!-- Form nội dung sản phẩm -->
        <form id='product-form'>
          <div class='mb-3'>
            <label for='product-brand' class='form-label'>Brand</label>
            <input type='text' class='form-control' id='product-brand' name='brand' value='' />
            <div class='invalid-feedback'>Please enter Brand!</div>
          </div>
          <div class='mb-3'>
            <label for='product-model' class='form-label'>Model</label>
            <input type='text' class='form-control' id='product-model' name='model' value='' />
            <div class='invalid-feedback'>Please enter Model!</div>
          </div>
          <div class='mb-3'>
            <label for='product-year' class='form-label'>Year</label>
            <input type='text' class='form-control' id='product-year' name='year' value='' />
            <div class='invalid-feedback'>Please enter Year!</div>
          </div>
          <div class='mb-3'>
            <label for='product-style' class='form-label'>Style</label>
            <input type='text' class='form-control' id='product-style' name='style' value='' />
            <div class='invalid-feedback'>Please enter Style!</div>
          </div>
          <div class='mb-3'>
            <label for='product-status' class='form-label'>Status</label>
            <select id='product-status' name='status' style='padding: 8px; border: 1px solid #ddd; border-radius: 5px; flex-grow: 1; width: 100%;'>
              <option value='new'>New</option>
              <option value='used'>Used</option>
              <option value='sold'>Sold</option>
            </select>
          </div>
          <div class='mb-3'>
            <label for='product-price' class='form-label'>Original Price</label>
            <input type='number' class='form-control' id='product-price' name='price' value='' />
            <div class='invalid-feedback'>Please enter Original Price!</div>
          </div>
          <div class='mb-3'>
            <label for='product-priceSelling' class='form-label'>Selling Price</label>
            <input type='number' class='form-control' id='product-priceSelling' name='priceSelling' value='' />
            <div class='invalid-feedback'>Please enter Selling Price!</div>
          </div>
          <div class='mb-3'>
            <label for='product-mileage' class='form-label'>Mileage</label>
            <input type='number' class='form-control' id='product-mileage' name='mileage' value='' />
            <div class='invalid-feedback'>Please enter Mileage!</div>
          </div>
          <div class='mb-3'>
            <label for='product-horsepower' class='form-label'>Horsepower</label>
            <input type='number' class='form-control' id='product-horsepower' name='horsepower' value='' />
            <div class='invalid-feedback'>Please enter Horsepower!</div>
          </div>
          <div class='mb-3'>
            <label for='product-transmission' class='form-label'>Transmission</label>
            <select
              id='product-transmission'
              name='transmission'
              style='padding: 8px; border: 1px solid #ddd; border-radius: 5px; flex-grow: 1; width: 100%;'
            >
              <option value='manual'>Manual</option>
              <option value='automatic'>Automatic</option>
            </select>
          </div>
          <div class='mb-3'>
            <label for='product-description' class='form-label'>Description</label>
            <textarea class='form-control' id='product-description' name='description' rows='3'></textarea>
            <div class='invalid-feedback'>Please enter Description!</div>
          </div>
          <div class='mb-3'>
            <label for='product-images' class='form-label'>Images</label>
            <div id='product-images'>
              <input type='text' class='form-control mb-2' name='images.image1' placeholder='Link image1' value='' />
              <input type='text' class='form-control mb-2' name='images.image2' placeholder='Link image2' value='' />
              <input type='text' class='form-control mb-2' name='images.image3' placeholder='Link image3' value='' />
              <input type='text' class='form-control mb-2' name='images.image4' placeholder='Link image4' value='' />
              <input type='text' class='form-control mb-2' name='images.image5' placeholder='Link image5' value='' />
            </div>
          </div>
        </form>
      </div>
      <div class='modal-footer'>
        <button type='button' class='btn btn-secondary' data-bs-dismiss='modal'>Close</button>
        <button type='button' id='save-product-btn' class='btn btn-primary'>Save</button>
      </div>
    </div>
  </div>
</div>