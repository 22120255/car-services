<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 300 150" height="40">
  <defs>
    <linearGradient id="wave-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ff7e5f; stop-opacity:1" />
      <stop offset="50%" style="stop-color:#feb47b; stop-opacity:1" />
      <stop offset="100%" style="stop-color:#6a11cb; stop-opacity:1" />
    </linearGradient>
  </defs>

  <!-- Animated Wave Effect on Text -->
  <text x="50%" y="50%" font-family="Arial" font-size="120" font-weight="bold" fill="url(#wave-gradient)" text-anchor="middle"  alignment-baseline="middle">
    3N
    <animate attributeName="fill" values="url(#wave-gradient);#fff;url(#wave-gradient)" dur="4s" repeatCount="indefinite"/>
  </text>
</svg>
