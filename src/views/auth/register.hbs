<div class='container'>
    <div class='login-container'>
        <h1>Đăng kí</h1>
        <div class='w-100 position-relative'>
            <form>
                <div class='form-group'>
                    <label for='email'>Email</label>
                    <input
                        type='email'
                        class='form-control'
                        id='email'
                        name='email'
                        placeholder='Nhập email của bạn'
                    />
                    <span class='fs-075' id='email-availability-message'></span>
                </div>

                <div class='form-group'>
                    <label for='fullName'>Tên đầy đủ</label>
                    <input
                        type='text'
                        class='form-control'
                        id='fullName'
                        name='fullName'
                        placeholder='Nhập tên của bạn'
                    />
                </div>

                <div class='form-group position-relative'>
                    <label for='password'>Nhập mật khẩu</label>
                    <input
                        type='password'
                        class='form-control'
                        id='password'
                        name='password'
                        placeholder='Nhập mật khẩu của bạn'
                    />
                    <button
                        type='button'
                        class='position-absolute end-0 top-50 me-2 p-1'
                        id='show-password'
                    >
                        <i class='fa fa-eye'></i>
                    </button>
                </div>

                <div class='form-group position-relative'>
                    <label for='re-password'>Nhập lại mật khẩu</label>
                    <input
                        type='password'
                        class='form-control'
                        id='re-password'
                        name='re-password'
                        placeholder='Nhập lại mật khẩu của bạn'
                    />
                    <button
                        type='button'
                        class='position-absolute end-0 top-50 me-2 p-1'
                        id='show-re-password'
                    >
                        <i class='fa fa-eye'></i>
                    </button>
                </div>
                <span class='fs-075 text-danger' id='message-error'></span>

                <button type='button' class='btn login-btn'>Đăng kí</button> 

                <div class='forgot-password'>
                    <span class='fs-075'>Bạn đã có tài khoản?
                        <a class='fs-075' href='/auth/login'>Đăng nhập</a></span>
                    <a class='fs-075' href='/auth/forgot-password'>Quên mật khẩu</a>
                </div>
            </form>
            <i class='fa fa-spinner d-none' id="icon-loading"></i>
        </div>
        <div class='group-social d-flex justify-content-around'>
            <button
                type='button'
                class='btn btn-outline-secondary btn-register btn-register-google'
            >
