    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const currentPage = window.location.pathname.split("/").pop();

            let customCss = document.createElement("link");
            customCss.rel = "stylesheet";

            switch (currentPage) {
                case "about":
                    customCss.href = "/css/about.css";
                    break;
                case "contact":
                    customCss.href = "/css/contact.css";
                    break;
                case "trang3.html":
                    customCss.href = "/css/trang3.css";
                    break;
                default:
                    customCss.href = "/css/home.css";
                    break;
            }

            document.head.appendChild(customCss);
        });
    </script>
