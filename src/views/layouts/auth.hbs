    <link rel="stylesheet" href="/vender/css/linearicons.css" />
    <link rel="stylesheet" href="/vender/css/flaticon.css" />
    <link rel="stylesheet" href="/vender/css/animate.css" />
    <link rel="stylesheet" href="/vender/css/owl.carousel.min.css" />
    <link rel="stylesheet" href="/vender/css/owl.theme.default.min.css" />
    <link rel="stylesheet" href="/vender/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/vender/css/bootsnav.css" />
    <link rel="stylesheet" href="/vender/css/style.css" />
