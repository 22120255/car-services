    <link rel="stylesheet" href="/vender/css/responsive.css" />
    <link rel="stylesheet" href="/css/common.css" />
    <link rel="stylesheet" href="/css/partials/auth.css" />

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const currentPage = window.location.pathname.split("/").pop();

            let customCss = document.createElement("link");
            customCss.rel = "stylesheet";

            switch (currentPage) {
                case "login":
                    customCss.href = "/css/auth/login.css";
                    break;
                case "register":
                    customCss.href = "/css/auth/register.css";
                    break;
                case "forgot-password":
                    customCss.href = "/css/auth/forgot-password.css";
                    break;
                default:
                    break;
            }

            document.head.appendChild(customCss);
        });
    </script>
</head>
<body>
    <main class="container-fuild wrapper-login position-relative">
      <button type="button" title="Quay lại" class="btn-back" id="btn-back">
        <i class="fa fa-chevron-left"></i>
        <span>Quay lại</span>
      </button>

        {{{body}}}

    </main>
    {{> ModalStatus id="success-modal" title="Đăng ký thành công" content="Tài khoản của bạn đã được tạo thành công, vui lòng kiểm tra hộp thư để kích hoạt tài khoản!" confirmButtonText="OK"}}
    {{> ModalStatus id="success-send-code-modal" title="Gửi mã thành công" content="Mã đã được gửi về email của bạn, vui lòng kiểm tra hộp thư lấy mã!" confirmButtonText="OK"}}
    {{> ModalStatus id="success-change-password-modal" title="Đặt lại mật khẩu" content="Mật khẩu đã thay đổi thành công, vui lòng đăng nhập lại!" confirmButtonText="OK"}}


    <script src="/vender/js/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"></script>
    <script src="/vender/js/bootstrap.js"></script>
    <script src="/vender/js/owl.carousel.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
    <script src="/vender/js/custom.js"></script>
    <script type="module" src="/js/auth/index.js"></script>
</body>
</html>