    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const currentPage = window.location.pathname.split("/").pop();

            let customCss = document.createElement("link");
            customCss.rel = "stylesheet";

            switch (currentPage) {
                case "about":
                    customCss.href = "/css/dashboard/about.css";
                    break;
                case "contact":
                    customCss.href = "/css/dashboard/contact.css";
                    break;
                case "products":
                    customCss.href = "/css/product/index.css";
                    break;
                case "dashboard":
                    customCss.href = "/css/dashboard/home.css";
                    break;
                default:
                    customCss.href = "/css/product/detail.css";
                    break;
            }

            document.head.appendChild(customCss);
        });
    </script>
