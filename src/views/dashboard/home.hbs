<div class='container-fuild welcome-hero'>
  <div class='welcome-hero-txt'>
    <h2>Own the car you desire at a reasonable price</h2>
    <p>
      We offer a wide range of vehicles, from popular models to high-end ones, suitable for your needs and budget.
    </p>
    <button class='welcome-btn' onclick="window.location.href='/dashboard/contact'">
      Contact us now
    </button>
  </div>
</div>

<!-- Promotions Section -->
<section id='promotions' class='promotions'>
  <div class='container'>
    <div class='section-header'>
      <h2>Special Promotions</h2>
    </div>
    <div class='row'>
      <div class='col-md-4 col-sm-6'>
        <div class='promotion-item'>
          <div class='promotion-icon'>
            <i class='fas fa-percentage'></i>
          </div>
          <h3>10% Discount</h3>
          <p>For all sedan models</p>
          <a href='#' class='btn btn-primary'>View Details</a>
        </div>
      </div>
      <div class='col-md-4 col-sm-6'>
        <div class='promotion-item'>
          <div class='promotion-icon'>
            <i class='fas fa-hand-holding-usd'></i>
          </div>
          <h3>0% Interest Rate</h3>
          <p>12 months installment plan</p>
          <a href='#' class='btn btn-primary'>Learn More</a>
        </div>
      </div>
      <div class='col-md-4 col-sm-6'>
        <div class='promotion-item'>
          <div class='promotion-icon'>
            <i class='fas fa-tools'></i>
          </div>
          <h3>Free Maintenance</h3>
          <p>For the first 2 years</p>
          <a href='dashboard/contact' class='btn btn-primary'>Sign Up Now</a>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Services Section -->
<section id='service' class='service'>
  <div class='container'>
    <div class='service-content'>
      <div class='row'>
        <div class='col-md-4 col-sm-6'>
          <div class='single-service-item'>
            <div class='single-service-icon'>
              <i class='flaticon-car'></i>
            </div>
            <h2><a href='#'>Largest Car Dealership Network</a></h2>
            <p>
              Offering diverse models with dedicated and attentive customer care.
            </p>
          </div>
        </div>
        <div class='col-md-4 col-sm-6'>
          <div class='single-service-item'>
            <div class='single-service-icon'>
              <i class='flaticon-car-repair'></i>
            </div>
            <h2><a href='#'>Unlimited Warranty and Repairs</a></h2>
            <p>
              On-site warranty and repair services during the warranty period.
            </p>
          </div>
        </div>
        <div class='col-md-4 col-sm-6'>
          <div class='single-service-item'>
            <div class='single-service-icon'>
              <i class='flaticon-car-1'></i>
            </div>
            <h2><a href='#'>Insurance Support</a></h2>
            <p>
              Trusted insurance partners to ensure your peace of mind while traveling.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Featured Products Section -->
<section id='featured-products' class='featured-products'>
  <div class='container'>
    <div class='section-header'>
      <h2>Best Selling Products</h2>
    </div>
    <div class='row'>
      {{#each mostProducts}}
        <div class='col-md-4 col-sm-6'>
          <div class='featured-product-item'>
            <div class='product-image'>
              <img src='{{getValueAt this.images 0}}' alt='Sedan Luxury X1' />
              <div class='product-overlay'>
                <a href='products/{{this.id}}' class='btn btn-primary'>View Details</a>
              </div>
            </div>
            <h3 class='text-uppercase'>{{this.style}}
              {{this.brand}}
              {{this.model}}</h3>
            <p class='price'>${{this.price}}</p>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>

<section id='featured-products' class='featured-products'>
  <div class='container'>
    <div class='section-header'>
      <h2>Latest Products</h2>
    </div>
    <div class='row'>
      {{#each newProducts}}
        <div class='col-md-4 col-sm-6'>
          <div class='featured-product-item'>
            <div class='product-image'>
              <img src='{{getValueAt this.images 0}}' alt='Sedan Luxury X1' />
              <div class='product-overlay'>
                <a href='products/{{this.id}}' class='btn btn-primary'>View Details</a>
              </div>
              {{#if (eq status 'new')}}<div class='new-arrival-badge'>New Arrival</div>
              {{else}}
              {{/if}}
            </div>
            <h3 class='text-uppercase'>{{this.style}}
              {{this.brand}}
              {{this.model}}</h3>
            <p class='price'>${{this.price}}</p>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>

