<section id='featured-cars' class='featured-cars'>
    <div class='container'>
        <div class='section-header'>
            <p class='sub-title'>
                Hãy khám phá những sản phẩm nổi bật của chúng tôi
            </p>
            <h2 class='main-title'>Sản phẩm của chúng tôi</h2>
            <p class='section-description'>
                Mang đến cho bạn những mẫu xe sang trọng, tiện nghi và đẳng cấp.
            </p>
        </div>
        <div class="featured-cars-filter" id = "filter-form">
            <form id="filterForm" method="GET" action="/products">
                <div class="row">
                    <div class="col-md-12">
                    <div class="model-search-content">
                        <div class="row justify-content-around mx-0">
                        <!-- Select Year -->
                        <div class="col-md-offset-1 col-md-2 col-sm-12">
                            <div class="single-model-search">
                            <h2>Năm</h2>
                            <div class="model-select-icon">
                                <select class="form-control" name="year">
                                    <option value="">Chọn năm</option>
                                    {{#each years}}
                                        <option value="{{this.value}}" {{#if (eq ../queries.year this.value)}}selected{{/if}}>
                                            {{this.name}}
                                        </option>
                                    {{/each}} 
                                </select>
                            </div>
                            </div>
                            <!-- Select Category -->
                            <div class="single-model-search">
                            <h2>Kiểu dáng</h2>
                            <div class="model-select-icon">
                                <select class="form-control" name="category">
                                    <option value="">Chọn kiểu dáng</option>
                                    {{#each categories}}
                                        <option value="{{this.name}}" {{#if (eq ../queries.category this.name)}}selected{{/if}}>
                                            {{this.label}}
                                        </option>
                                    {{/each}} 
                                </select>
                            </div>
                            </div>
                        </div>
                        <!-- Select Make -->
                        <div class="col-md-offset-1 col-md-2 col-sm-12">
                            <div class="single-model-search">
                            <h2>Hãng xe</h2>
                            <div class="model-select-icon">
                                <select class="form-control" name="brand">
                                    <option value="">Chọn hãng</option>
                                    {{#each brands}}
                                        <option value="{{this.value}}" {{#if (eq ../queries.brand this.value)}}selected{{/if}}>
                                            {{this.name}}
                                        </option>
                                    {{/each}}                  
                                </select>
                            </div>
                            </div>
                            <!-- Select Condition -->
                            <div class="single-model-search">
                            <h2>Tình trạng</h2>
                            <div class="model-select-icon">
                                <select class="form-control" name="status">
                                    <option value="">Chọn tình trạng</option>
                                    {{#each statuses}}
                                        <option value="{{this.name}}" {{#if (eq ../queries.status this.name)}}selected{{/if}}>
                                            {{this.label}}
                                        </option>
                                    {{/each}}      
                                </select>
                            </div>
                            </div>
                        </div>
                        <!-- Select Model -->
                        <div class="col-md-offset-1 col-md-2 col-sm-12">
                            <div class="single-model-search">
                            <h2>Hộp số</h2>
                            <div class="model-select-icon">
                                <select class="form-control" name="transmission">
                                    <option value="">Chọn hộp số</option>
                                {{#each transmissions}}
                                        <option value="{{this.name}}" {{#if (eq ../queries.transmission this.name)}}selected{{/if}}>
                                            {{this.label}}
                                        </option>
                                    {{/each}}   
                                </select>
                            </div>
                            </div>
                            <!-- Select Price -->
                            <div class="single-model-search">
                            <h2>Nhập mức giá ($)</h2>
                            <div id="model-price" class="price-range">
                                <input type="number" class="form-control price-input" name="price_min" placeholder="$Từ" min="0" value="{{queries.price_min}}">
                                <span>-</span>
                                <input type="number" class="form-control price-input" name="price_max" placeholder="$Đến" min="0" value="{{queries.price_max}}">
                            </div>
                            <div class="text-center">
                                <span id="price-error" class="text-danger"></span>
                            </div>
                            </div>
                        </div>
                        <!-- Search Button -->
                        <div class="col-md-2 col-sm-12">
                            <div class="single-model-search text-center">
                            <button class="welcome-btn model-search-btn">Tìm kiếm</button>
                            </div>
                        </div>
                        </div>
                    </div>
                    </div>
                </div>
            </form>
        </div>
        <div class='container'>
            <div class='row featured-cars-content g-3' id='product-list'> <!-- Thêm id cho sản phẩm để jQuery cập nhật -->
                {{#each products}}
                    <div class='col-lg-3 col-md-4 col-sm-6'>
                        {{> CardProduct product=this}}
                    </div>
                {{else}}
                <div class='col-lg-12'>
                    <div class='find-nothing text-center' >
                            <h2 style = "font-size: large; color: #978e8e">Không tìm thấy sản phẩm</h2>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        <div class="d-flex">
            {{#if pages}}
                <nav class="mx-auto">
                    <ul class="pagination" style="margin-top: 2rem;">
                        <!-- Previous Button -->
                        {{#if (gt current 1)}}
                            <li class="page-item">
                                <a class="page-link"href="/products?page={{dec current}}&year={{queries.year}}&category={{queries.category}}&brand={{queries.brand}}&status={{queries.status}}&transmission={{queries.transmission}}&price_min={{queries.price_min}}&price_max={{queries.price_max}}">Previous</a>
                            </li>
                        {{else}}
                            <li class="page-item disabled">
                                <a class="page-link" href="#">Previous</a>
                            </li>
                        {{/if}}
                        
                        <!-- Page Numbers -->
                        {{#each pagesArray}}
                            <li class="page-item  {{#if (eq this ../current)}}active{{/if}}">
                                <a class="page-link" href="/products?page={{this}}&year={{../queries.year}}&category={{../queries.category}}&brand={{../queries.brand}}&status={{../queries.status}}&transmission={{../queries.transmission}}&price_min={{../queries.price_min}}&price_max={{../queries.price_max}}">{{this}}</a>
                            </li>
                        {{/each}}

                        <!-- Next Button -->
                        {{#if (lt current pages)}}
                            <li class="page-item">
                                <a class="page-link" href="/products?page={{inc current}}&year={{../queries.year}}&category={{queries.category}}&brand={{queries.brand}}&status={{queries.status}}&transmission={{queries.transmission}}&price_min={{queries.price_min}}&price_max={{queries.price_max}}">Next</a>
                            </li>
                        {{else}}
                            <li class="page-item disabled">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        {{/if}}
                    </ul>
                </nav>
            {{/if}}
        </div>
</div>
    <!--/.container-->
</section>

<form name = "detail-form" method="GET" ></form>

<script src="/js/products/index.js"></script>
