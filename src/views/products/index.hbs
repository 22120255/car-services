<section id='featured-cars' class='featured-cars'>
    <div class='container'>
        <div class='section-header'>
            <p class='sub-title'>
                Hãy khám phá những sản phẩm nổi bật của chúng tôi
            </p>
            <h2 class='main-title'>Sản phẩm của chúng tôi</h2>
            <p class='section-description'>
                Mang đến cho bạn những mẫu xe sang trọng, tiện nghi và đẳng cấp.
            </p>
        </div>
        <div class="featured-cars-filter" id = "filter-form">
            <form id="filterForm" method="GET" action="/products">
                <div class="row mb-4">
                    <div class="col-md-12">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Tìm kiếm sản phẩm..." name="search" value="{{queries.search}}">
                            <button class="btn btn-outline-secondary" type="submit">Tìm kiếm</button>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                    <div class="model-search-content">
                        <div class="row justify-content-around mx-0">
                        <!-- Select Year -->
                        <div class="col-md-offset-1 col-md-2 col-sm-12">
                            <div class="single-model-search">
                            <h2>Năm</h2>
                            <div class="model-select-icon">
                                <select class="form-control" name="year">
                                    <option value="">Chọn năm</option>
                                    {{#each years}}
                                        <option value="{{this.value}}" {{#if (eq ../queries.year this.value)}}selected{{/if}}>
                                            {{this.name}}
                                        </option>
                                    {{/each}} 
                                </select>
                            </div>
                            </div>
                            <!-- Select Category -->
                            <div class="single-model-search">
                            <h2>Kiểu dáng</h2>
                            <div class="model-select-icon">
                                <select class="form-control" name="category">
                                    <option value="">Chọn kiểu dáng</option>
                                    {{#each categories}}
                                        <option value="{{this.name}}" {{#if (eq ../queries.category this.name)}}selected{{/if}}>
                                            {{this.label}}
                                        </option>
                                    {{/each}} 
                                </select>
                            </div>
                            </div>
                        </div>
                        <!-- Select Make -->
                        <div class="col-md-offset-1 col-md-2 col-sm-12">
                            <div class="single-model-search">
                            <h2>Hãng xe</h2>
                            <div class="model-select-icon">
                                <select class="form-control" name="brand">
                                    <option value="">Chọn hãng</option>
                                    {{#each brands}}
                                        <option value="{{this.value}}" {{#if (eq ../queries.brand this.value)}}selected{{/if}}>
                                            {{this.name}}
                                        </option>
                                    {{/each}}                  
                                </select>
                            </div>
                            </div>
                            <!-- Select Condition -->
                            <div class="single-model-search">
                            <h2>Tình trạng</h2>
                            <div class="model-select-icon">
                                <select class="form-control" name="status">
                                    <option value="">Chọn tình trạng</option>
                                    {{#each statuses}}
                                        <option value="{{this.name}}" {{#if (eq ../queries.status this.name)}}selected{{/if}}>
                                            {{this.label}}
                                        </option>
                                    {{/each}}      
                                </select>
                            </div>
                            </div>
                        </div>
                        <!-- Select Model -->
                        <div class="col-md-offset-1 col-md-2 col-sm-12">
                            <div class="single-model-search">
                            <h2>Hộp số</h2>
                            <div class="model-select-icon">
                                <select class="form-control" name="transmission">
                                    <option value="">Chọn hộp số</option>
                                {{#each transmissions}}
                                        <option value="{{this.name}}" {{#if (eq ../queries.transmission this.name)}}selected{{/if}}>
                                            {{this.label}}
                                        </option>
                                    {{/each}}   
                                </select>
                            </div>
                            </div>
                            <!-- Select Price -->
                            <div class="single-model-search">
                            <h2>Mức giá ($)</h2>
                            <div class="model-select-icon">
                                <select class="form-control" name="price">
                                    <option value="">Chọn mức giá</option>
                                    {{#each price}}
                                        <option 
                                            value="{{this.priceMin}}-{{this.priceMax}}"
                                            data_price_min="{{this.priceMin}}" 
                                            data_price_max="{{this.priceMax}}"
                                            {{#if (gt 1 1) }}selected{{/if}}> <!-- 1 1 là true -->
                                            ${{this.priceMin}} - ${{this.priceMax}}
                                        </option>
                                    {{/each}}
                                </select>
                            </div>
                            </div>
                        </div>
                       
                        </div>
                    </div>
                    </div>
                </div>
            </form>
        </div>
        <div class='container'>
            <div class='row featured-cars-content g-3' id='product-list'> <!-- Thêm id cho sản phẩm để jQuery cập nhật -->
                {{#each products}}
                    <div class='col-lg-3 col-md-4 col-sm-6'>
                        {{> CardProduct product=this}}
                    </div>
                {{else}}
                <div class='col-lg-12'>
                    <div class='find-nothing text-center' >
                            <h2 style = "font-size: large; color: #978e8e">Không tìm thấy sản phẩm</h2>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        <div class="d-flex justify-content-between align-items-center mt-4" style="gap: 1rem;">
            {{#if pages}}
                <div class="d-none d-sm-block" style="width: 100px;"></div> <!-- Spacer for small screens and up -->
                <nav aria-label="Page navigation" class="flex-grow-1 d-flex justify-content-center">
                    <ul class="pagination" style="margin: 0;">
                        <!-- Previous Button -->
                        <li class="page-item {{#unless (gt current 1)}}disabled{{/unless}}">
                            <a class="page-link" href="{{#if (gt current 1)}}/products?page={{dec current}}&year={{queries.year}}&category={{queries.category}}&brand={{queries.brand}}&status={{queries.status}}&transmission={{queries.transmission}}&price_min={{queries.price_min}}&price_max={{queries.price_max}}{{else}}#{{/if}}&perPage={{queries.perPage}}" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        
                        <!-- Page Numbers -->
                        {{#each pagesArray}}
                            {{#if (eq this ../current)}}
                                <li class="page-item active" aria-current="page">
                                    <span class="page-link">{{this}}</span>
                                </li>
                            {{else}}
                                <li class="page-item">
                                    <a class="page-link" href="/products?page={{this}}&year={{../queries.year}}&category={{../queries.category}}&brand={{../queries.brand}}&status={{../queries.status}}&transmission={{../queries.transmission}}&price_min={{../queries.price_min}}&price_max={{../queries.price_max}}&perPage={{../queries.perPage}}">{{this}}</a>
                                </li>
                            {{/if}}
                        {{/each}}

                        <!-- Next Button -->
                        <li class="page-item {{#unless (lt current pages)}}disabled{{/unless}}">
                            <a class="page-link" href="{{#if (lt current pages)}}/products?page={{inc current}}&year={{queries.year}}&category={{queries.category}}&brand={{queries.brand}}&status={{queries.status}}&transmission={{queries.transmission}}&price_min={{queries.price_min}}&price_max={{queries.price_max}}{{else}}#{{/if}}&perPage={{queries.perPage}}" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            {{/if}}
            
            <!-- Items per page select -->
            <form id="filterForm" method="GET" action="/products">
                <select class="form-select" aria-label="Items per page" style="width: auto;" name = "perPage" >
                    {{#each perPage}}
                        <option value="{{this.value}}" {{#if (eq ../queries.perPage this.value)}}selected{{/if}}>{{this.value}} / trang</option>
                    {{/each}}
                </select>
            </form>
        </div>
    </div>
</section>


<script src="/js/products/index.js"></script>

