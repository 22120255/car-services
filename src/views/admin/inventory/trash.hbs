<div class='container'>
  <header class='header'>
    <h1 class='title'>Trash Products</h1>
    <a href='/admin/inventory/products' class='btn btn-return'>
      <i class='fas fa-arrow-left'></i>
      Return
    </a>
  </header>

  <div class='table-container'>
    <table class='product-table'>
      <thead>
        <tr>
          <th><span>Image</span></th>
          <th><span>Product Name</span></th>
          <th><span>Deleted By</span></th>
          <th><span>Created Date</span></th>
          <th><span>Deleted Date</span></th>
          <th><span>Status</span></th>
          <th><span>Actions</span></th>
        </tr>
      </thead>
      <tbody id='trashTable'>
        {{!-- {{#each products}}
          <tr>
            <td>
              <img src="{{this.image}}" alt="{{this.name}}" class="product-image">
            </td>
            <td>{{this.brand}} {{this.model}}</td>
            <td>{{this.deletedBy}}</td>
            <td>{{formatDate this.createdAt}}</td>
            <td>{{formatDate this.deletedAt}}</td>
            <td>
              <span class="status-badge {{#if this.status}}status-active{{else}}status-deleted{{/if}}">
                {{#if this.status}}Active{{else}}Deleted{{/if}}
              </span>
            </td>
            <td>
              <div class="action-buttons">
                <button class="btn btn-delete" data-id="{{this._id}}">
                  <i class="fas fa-trash"></i> Delete
                </button>
                <button class="btn btn-restore" data-id="{{this._id}}">
                  <i class="fas fa-undo"></i> Restore
                </button>
              </div>
            </td>
          </tr>
        {{else}}
          <tr>
            <td colspan="7" class="empty-message">No products in trash</td>
          </tr>
        {{/each}} --}}

      </tbody>

    </table>

  </div>
  <div class='d-flex justify-content-between align-items-center mt-4' style='gap: 1rem;'>
    <div class='d-none d-sm-block' style='width: 100px;'></div>
    <!-- Spacer for small screens and up -->
    <nav aria-label='Page navigation' class='flex-grow-1 d-flex justify-content-center'>
      <ul class='pagination' style='margin: 0;'>
        <!--pagination here-->
      </ul>
    </nav>
    <!-- Items per page select -->
    <select class='form-select' aria-label='Items per page' style='width: auto;' name='limit' id='limit'>
    </select>
  </div>
</div>

<script type='module' src='\js\admin\inventory\trash.js'></script>