<div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Trash Products</h2>
        <a href="/admin/inventory/products" class="btn btn-primary">
            <i class="fas fa-arrow-left"></i> Return
        </a>
    </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Product Name</th>
                        <th>Deleted By</th>
                        <th>Created Date</th>
                        <th>Deleted Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <td>
                            <img src="{{this.image}}" alt="{{this.name}}" class="product-image">
                        </td>
                        <td>{{this.name}}</td>
                        <td>{{this.deletedBy}}</td>
                        <td>{{formatDate this.createdAt}}</td>
                        <td>{{formatDate this.deletedAt}}</td>
                        <td>
                            <span class="badge {{#if this.status}}badge-success{{else}}badge-danger{{/if}}">
                                {{#if this.status}}Active{{else}}Deleted{{/if}}
                            </span>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <button class="btn btn-danger btn-sm" data-id="{{this._id}}">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                                <button class="btn btn-success btn-sm" data-id="{{this._id}}">
                                    <i class="fas fa-undo"></i> Restore
                                </button>
                            </div>
                        </td>
                    </tr>
                    {{else}}
                    <tr>
                        <td colspan="7" class="text-center">No products in trash</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>