{{!-- views/payment/success.hbs --}}
<div class="container py-5">
    <div class="text-center">
        {{#if (eq code "00")}}
            <div class="mb-4">
                <i class="fas fa-check-circle" style="font-size: 4rem; color: var(--primary-blue);"></i>
                <h2 class="mt-3" style="color: var(--primary-blue);">Giao dịch thành công!</h2>
                <p class="text-muted">Cảm ơn bạn đã sử dụng dịch vụ của chúng tôi</p>
            </div>
        {{else}}
            <div class="mb-4">
                <i class="fas fa-times-circle" style="font-size: 4rem; color: var(--primary-red);"></i>
                <h2 class="mt-3" style="color: var(--primary-red);">Giao dịch thất bại!</h2>
                <p class="text-muted">Vui lòng thử lại hoặc liên hệ hỗ trợ</p>
            </div>
        {{/if}}
        
        <a href="/dashboard" class="btn btn-lg px-4" style="background: linear-gradient(to right, var(--primary-red), var(--primary-blue)); color: white; border: none;">
            <i class="fas fa-arrow-left me-2"></i>Quay lại trang chủ
        </a>
    </div>
</div>