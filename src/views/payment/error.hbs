<div class="container py-5">
    <div class="text-center">
        <div class="mb-4">
            <i class="fas fa-exclamation-circle text-danger" style="font-size: 4rem; color: var(--primary-red);"></i>
            <h2 class="mt-3" style="color: var(--primary-red);">Có lỗi xảy ra!</h2>
            <p class="text-muted">{{message}}</p>
            {{#if error}}
                <div class="alert alert-danger mx-auto" style="max-width: 600px;">
                    <pre style="margin-bottom: 0;">{{error.stack}}</pre>
                </div>
            {{/if}}
        </div>
        
        <a href="/" class="btn btn-lg px-4" style="background: linear-gradient(to right, var(--primary-red), var(--primary-blue)); color: white; border: none;">
            <i class="fas fa-home me-2"></i>Về trang chủ
        </a>
    </div>
</div>